<?xml version="1.0" encoding="UTF-8" ?>

 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suph.security.core.dao.AuthgroupDAO">
	<resultMap type="com.suph.security.core.dto.AuthgroupDTO" id="AuthgroupDTO">
		<result column="AUTH_GRP_SQ_PK" property="authgroupNo"/>	<!-- 권한 그룹 일련 번호 -->
		<result column="AUTH_GRP_NM_UNQ" property="authgroupName"/>	<!-- 권한 그룹 명 -->
		<result column="AUTH_GRP_EXPLN" property="authgroupExplanation"/>	<!-- 권한 그룹 설명 -->
	</resultMap>
	
	<!-- 모든 권한 그룹 목록을 페이징 처리하여 조회 -->
	<select id="getAuthgroupList" parameterType="PaginationRequest" resultMap="AuthgroupDTO">
		SELECT * FROM AUTH_GRP_TB
		LIMIT ${start}, ${pagesize}
	</select>
	
	<!-- 모든 권한 그룹 목록의 개수 조회 -->
	<select id="getAuthgroupListTotalRows" resultType="int">
		SELECT COUNT(*) FROM AUTH_GRP_TB
	</select>
	
	<!-- 권한 그룹 등록 -->
	<insert id="insertAuthgroup" parameterType="AuthgroupDTO">
		INSERT INTO
			AUTH_GRP_TB(
				AUTH_GRP_NM_UNQ,
				AUTH_GRP_EXPLN
			)
			VALUES(
				#{authgroupName},
				#{authgroupExplanation}
			)
	</insert>
	
	<!-- 특정 권한 그룹 수정 -->
	<update id="updateAuthgroupByAuthgroupNo" parameterType="AuthgroupDTO">
		UPDATE
			AUTH_GRP_TB
		<set>
			<if test="authgroupName != null and !''.equals(authgroupName)">
				AUTH_GRP_NM_UNQ = #{authgroupName},
			</if>
			<if test="authgroupExplanation != null and !''.equals(authgroupExplanation)">
				AUTH_GRP_EXPLN = #{authgroupExplanation},
			</if>
		</set>
		WHERE
			AUTH_GRP_SQ_PK = #{authgroupNo}
	</update>
	
	<!-- 특정 권한 그룹 삭제 -->
	<delete id="deleteAuthgroupByAuthgroupNo" parameterType="int">
		DELETE FROM
			AUTH_GRP_TB
		WHERE
			AUTH_GRP_SQ_PK = #{authgroupNo}
	</delete>
</mapper>